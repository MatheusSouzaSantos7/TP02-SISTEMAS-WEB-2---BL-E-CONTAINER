<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Port Manager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-light">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color:#0b3d91;">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-page="/Index">
                    <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor" class="bi bi-box-seam me-2" viewBox="0 0 16 16">
                        <path d="M9.828.122a.5.5 0 0 0-.656 0L7.5 1.5 6.828.878a.5.5 0 0 0-.656 0L.146 6.904a.5.5 0 0 0 .354.854h1.293l.5-2 3.232-1.616 1.172 1.172 1-1 1.172-1.172 3.232 1.616.5 2h1.293a.5.5 0 0 0 .354-.854L9.828.122z"/>
                    </svg>
                    Port Manager
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/BLs/Index">BLs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Containers/Index">Containers</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container my-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top bg-white">
        <div class="container py-3 d-flex justify-content-between">
            <div>
                <strong class="text-dark">Port Manager</strong>
                <div class="text-muted small">&copy; 2025 - Matheus Angelo</div>
            </div>
            <div class="text-muted small">CB3025489</div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>