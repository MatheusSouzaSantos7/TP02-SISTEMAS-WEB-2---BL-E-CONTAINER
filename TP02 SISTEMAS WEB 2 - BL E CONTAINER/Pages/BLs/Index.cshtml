@page
@model TP02_SISTEMAS_WEB_2___BL_E_CONTAINER.Pages.BLs.IndexModel
@{
    ViewData["Title"] = "BLs";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">BLs</h1>
    <div>
        <a class="btn btn-primary me-2" asp-page="Create">New BL</a>
        <a class="btn btn-outline-secondary" asp-page="/Containers/Index">View Containers</a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Id</th>
                    <th>Numero</th>
                    <th>Consignee</th>
                    <th>Navio</th>
                    <th>Containers</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.BLs)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Numero</td>
                    <td>@item.Consignee</td>
                    <td>@item.Navio</td>
                    <td>@item.Containers?.Count()</td>
                    <td>
                        <a class="btn btn-sm btn-outline-info me-1" asp-page="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-sm btn-outline-danger me-1" asp-page="Delete" asp-route-id="@item.Id">Delete</a>
                        <a class="btn btn-sm btn-outline-secondary" asp-page="Details" asp-route-id="@item.Id">Details</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
