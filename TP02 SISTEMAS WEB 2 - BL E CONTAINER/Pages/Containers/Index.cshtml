@page
@model TP02_SISTEMAS_WEB_2___BL_E_CONTAINER.Pages.Containers.IndexModel
@{
    ViewData["Title"] = "Containers";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">Containers</h1>
    <div>
        <a class="btn btn-primary me-2" asp-page="Create">New Container</a>
        <a class="btn btn-outline-secondary" asp-page="/BLs/Index">View BLs</a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Id</th>
                    <th>Numero</th>
                    <th>Tipo</th>
                    <th>Tamanho</th>
                    <th>BL</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Containers)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Numero</td>
                    <td>@item.Tipo</td>
                    <td>@item.Tamanho</td>
                    <td>@item.BL?.Numero</td>
                    <td>
                        <a class="btn btn-sm btn-outline-info me-1" asp-page="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-sm btn-outline-danger" asp-page="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
